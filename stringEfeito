#include <stdio.h>
#include <stdlib.h>
#include <locale.h>
#include <string.h>
#include <unistd.h>

int main(){
    char nome[50];
    printf("Digite um nome:");
    scanf("%50[^\n]", nome);
    int contagem = strlen(nome);
    int i, j;
    for(i = 0; i < strlen(nome); i++){ 
        for(j = 0; j < contagem; j++){
            printf("%c", nome[j]);
        }
        contagem--;
        puts("");
    }
    contagem = 0;
    for(i = 0; i < strlen(nome); i++){ 
        for(j = 0; j < strlen(nome); j++){
            printf("%c", nome[j]);
        }
        contagem++;
        puts("");
    }
    
    
    return 0;
}
