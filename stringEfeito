#include <stdio.h>
#include <stdlib.h>
#include <locale.h>
#include <string.h>
#include <unistd.h>

int main(){
    char nome[50];
    printf("Digite um nome:");
    scanf("%50[^\n]", nome);
    int contagem = strlen(nome);
    int contagem2= contagem;
    int i, j;
    for(i = contagem; i >= 0; i--){ 
        for(j = 0; j < contagem2-i; j++){
            printf("%c ", nome[j]);
        }
        puts("");
    }
    contagem2--;
    for(i = 0; i < contagem; i++){ 
        for(j = 0; j < contagem2; j++){
            printf("%c ", nome[j]);
        }
        contagem2--;
        puts("");
    }
    
    return 0;
}
